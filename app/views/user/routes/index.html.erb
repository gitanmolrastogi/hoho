
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <div class="map-block">
            <div class="map"><img class="img-responsive" src= <%= @image %> style="width:100%; min-height:180px;"></div>
            <div class="search-route">
              <form class="form-block">
                <div class="form-group">


                  <% routes = @route_dropdown.pluck(:name,:id)%>
                  <% routes.each do |route|%>
                  <% route[0] = route[0].titleize %>
                  <% end %>




                  <%= select_tag "route", options_for_select(routes),:class=>"form-control",:onchange=>"window.location.href='/user/routes/index?route_id='+this.value" ,  :include_blank => "Select Route" %>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <br>Image Courtesy:  <%= @image_credit %>
    </div>
    
    <section class="page-content">
      <!-- page section was here -->

      <%= render :partial=> "user/routes/booking_button"  %>
    </section>
    

