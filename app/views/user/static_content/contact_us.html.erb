            <div class="container">
                <div class="header-img contact-img"></div>
            </div>
    
        
        <section class="page-content contact-us">
            <div class="container">
                <div class="heading-block">
                    <h2 class="heading">Contact US</h2>
                    <div class="head-line m-b-10"></div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                    <%= form_tag(contact_admin_user_static_content_index_path,:id=>"contact_form" ,:class=>"form-block row") do %>
                            <div class="form-group col-md-6">
                            <%= text_field_tag "first_name",nil,:class=>"form-control", :placeholder=>"First Name"%>
                            </div>
                            
                            <div class="form-group col-md-6">
                            <%= text_field_tag "last_name",nil,:class=>"form-control", :placeholder=>"Last Name"%>
                            </div>

                            <div class="form-group col-md-6">
                            <%= text_field_tag "email",nil,:class=>"form-control", :placeholder=>"Email"%>
                            </div>

                            <div class="form-group col-md-6">
                            <%= text_field_tag "mobile_number",nil,:class=>"form-control", :placeholder=>"Mobile Number"%>

                            </div>
                            <div class="form-group col-md-12">
                            <%= select_tag :subject,options_for_select(["Hindi","English"]),:class=>"form-control",:prompt=>"Select language"%>
                            </div>
                            <div class="form-group col-md-12">
                            <%= text_area_tag "help",nil,:class=>"form-control", :placeholder=>"How Can We Help"%>                      
                            </div>

                            <div class="form-group col-md-12">
                                 <%=submit_tag "Submit",:class=>"btn red-btn"%>
                           </div>
                           <% end %>
                    </div>
                    <div class="col-md-5">
                        <ul class="contact-list">
                            <li>
                                <i class="fa fa-map-marker"></i>
                                <%= StaticPage.find_by(title: "Address").try(:content).html_safe%>
                            </li>
                            <li>
                                <i class="fa fa-phone"></i>
                                + 91 <%= StaticPage.find_by(title: "Phone Number").try(:content)%>
                            </li>
                            <li>
                                <i class="fa fa-envelope"></i>
                                <%= StaticPage.find_by(title: "Email").try(:content).html_safe%>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>


<script type="text/javascript">

  $('#contact_form').validate({
        // Specify the validation rules
        rules: {
            "first_name": {
                 required: true,
                 pattern: /^[a-z A-Z]+$/,
                 maxlength: 10
                
            },
            "last_name": {
                 required: true,
                 pattern: /^[a-z A-Z]+$/,
                 maxlength: 10
                
            },
            "email": {
                 required: true,
                 email: true,
                 },
                 
            "mobile_number": {
                 required: true,
                 number: true,
                 maxlength: 10,
                 minlength: 10

                
            },
            "subject": {
                 required: true,
                
            },

            "help": {
                 required: true,
                 maxlength: 250
                
            },
        },
        // // Specify the validation error messages
        messages: {
             "first_name": {
                required: "Enter first name",
                pattern: "Enter only letters",
                maxlength: "Should not exceed limit 10"
                
            },
            "last_name": {
                required: "Enter last name",
                pattern: "Enter only letters",
                maxlength: "Should not exceed limit 10"
                
            },
            "email": {
                required: "Enter email",
                email: "Enter valid email",
                

            },
            "mobile_number": {
                required: "Enter mobile number",
                number: "Enter only numbers",
                maxlength: "Equal to only 10 characters",
                minlength: "Equal to only 10 characters"
                
            },
            "subject": {
                required: "Select subject"
                
            },

            "help": {
                required: "Enter your view.",
                maxlength: "Should not exceed limit 250"
                
            },
            
        },
       submitHandler: function(form) {
            form.submit();
        }
    });
        
        </script>