<%= form_tag(bus_scheduling_update_admin_bus_path, method: :put) do %>

   
   <% @cities.each do |city| %>
       <%= fields_for "cities[#{city.id}]", city do |pf| %>
          <div>
          <%= city.city.titleize%><br>

          <%= "Time of Arrival"%>
          <%#=pf.time_select :arrival, :ignore_date => true, :ampm=> true,prompt: {hour: "Choose   Hour", minute: 'Choose minute'},include_blank: false %>
          <%=pf.text_field :arrival, :class=> "time_picker", :style=> "width: 8%;" ,required: true, value: (city.deperture.strftime("%I:%M %p") if city.deperture.present?)%><br>
          <%= "Day of Arrival"%>
          <%= pf.text_field :day_of_arrival, required: true %><br>
         


          <%= "Time of Departure"%>
          <%= pf.text_field :deperture, :class => "time_picker", :style=> "width: 8%;" ,required: true, value: (city.deperture.strftime("%I:%M %p") if city.deperture.present?)%><br>

          <%= "Day of Departure"%>
           <%= pf.text_field :day_of_deperture , required: true %><br><br><br><br>
        </div>
       <% end %>
   <% end %>

<div><%= submit_tag 'Save' %></div>
<% end %>




<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
<script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
<script type="text/javascript">
$(document).ready(function(){


  
  $(".time_picker").timepicker({
     timeFormat: 'hh:mm:ss p' ,
     interval: 5
  });
  


});
</script>