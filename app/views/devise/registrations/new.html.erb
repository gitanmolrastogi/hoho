<section class="login-screen">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
          <div class="login-box">
            <div class="login-box-body">
              <div class="login-top">
                <p class="login-box-msg">Sign Up</p>
                <p class="des-msg">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut</p>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name),:class=>"login-form-a",id: "signup_form") do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group has-feedback">
    <%= f.text_field :first_name, autofocus: true,placeholder: "First Name",:class=>"form-control"%>
  </div>

  <div class="form-group has-feedback">
  <%= f.text_field :last_name, autofocus: true,placeholder: "Last Name",:class=>"form-control"%>
  </div>

  <div class="form-group has-feedback">
    <%= f.text_field :email, autofocus: true,placeholder: "Email",:class=>"form-control"%>
  </div>

  <div class="form-group has-feedback">
   <%= f.password_field :password, autocomplete: "off" ,placeholder: "Password",:class=>"form-control"%>
  </div>

  <div class="form-group has-feedback">
<%= f.password_field :password_confirmation, autocomplete: "off",placeholder: "Confirm Password",:class=>"form-control" %>
  </div>

  <div >
    <%= f.submit "Sign up" ,:class=>"btn btn-block submit-btn mrg-tb"%>
  </div>
  <div class="text-center" style="color:#fff;">Already have an account?<a href="/users/sign_in" class="p-l-10" style="color:#fff;text-decoration:underline;">Login here<a></div></br>
<% end %>
  </div>
              
  </div>
            <!-- /.login-box-body -->
          </div>
        </div>
      </div>
    </div>
  </section>
<%#= render "devise/shared/links" %>


<script type="text/javascript">
  $(document).ready(function(){
   $("#new_user").validate({
        // Specify the validation rules
        rules: {
            "user[first_name]": {
                 required: true,
                 pattern: /^[a-z A-Z]+$/,
                 maxlength: 10
                
            },
            "user[last_name]": {
                 required: true,
                 pattern: /^[a-z A-Z]+$/,
                 maxlength: 10
                
            },
            "user[email]": {
                 required: true,
                 email: true,
                 remote:"/users/check_email"

                
            },
            "user[password]": {
                 required: true,
                 minlength:6
                
            },
            "user[password_confirmation]": {
                 required: true,
                 equalTo: "#user_password"
                
            },
        },
        // // Specify the validation error messages
        messages: {
             "user[first_name]": {
                required: "Please provide a first name",
                pattern: "please enter only letters",
                maxlength: "Should not exceed limit 10"
                
            },
            "user[last_name]": {
                required: "Please provide a last name",
                pattern: "please enter only letters",
                maxlength: "Should not exceed limit 10"
                
            },
            "user[email]": {
                required: "Please provide a email",
                email: "Please enter valid email",
                remote: "Email already registered",

            },
            "user[password]": {
                required: "Please provide a password",
                minlength: "should be atleast 6 characters"
                
            },
            "user[password_confirmation]": {
                required: "Please provide a password confirmation",
                equalTo: "Password confirmation doesn't match"
                
            },
            
        },
       submitHandler: function(form) {
            form.submit();
        }
    });
    });

</script>