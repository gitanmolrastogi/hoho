<%= render :partial => 'layouts/slider_top'%>
  <p class="login-box-msg">Sign Up</p>

  <p class="des-msg">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor</p>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),:class=>"login-form-a",:html=>{id: "signup_form"}) do |f| %>
    <%= devise_error_messages! %>

  <div class="form-group has-feedback">
    <%= f.text_field :first_name, autofocus: true,placeholder: "First Name",:class=>"form-control"%>
  </div>

  <div class="form-group has-feedback">
  <%= f.text_field :last_name, autofocus: true,placeholder: "Last Name",:class=>"form-control"%>
  </div>

  <div class="form-group has-feedback">
    <%= f.text_field :email, autofocus: true,placeholder: "Email",:class=>"form-control"%>
  </div>

  <div class="form-group has-feedback">
   <%= f.password_field :password, autocomplete: "off" ,placeholder: "Password",:class=>"form-control"%>
  </div>

  <div class="form-group has-feedback">
  <%= f.password_field :password_confirmation, autocomplete: "off",placeholder: "Confirm Password",:class=>"form-control" %>
  </div>

  <div >
    <%= f.submit "Sign up" ,:class=>"btn btn-block submit-btn mrg-tb"%>
  </div>

  <div class="text-center" style="color:#fff;">Already have an account?<a href="/users/sign_in" class="p-l-10" style="color:#fff;text-decoration:underline;">Login here<a>
  </div>
  </br>
  <% end %>
  <%= render :partial => 'layouts/slider_bottom'%>



<script type="text/javascript">
  $(document).ready(function(){

   $("#signup_form").validate({
        // Specify the validation rules
        rules: {
            "user[first_name]": {
                 required: true,
                 pattern: /^[a-z A-Z]+$/,
                 maxlength: 10
                
            },
            "user[last_name]": {
                 required: true,
                 pattern: /^[a-z A-Z]+$/,
                 maxlength: 10
                
            },
            "user[email]": {
                 required: true,
                 email: true,
                 remote:"/users/check_email"

                
            },
            "user[password]": {
                 required: true,
                 minlength:6
                
            },
            "user[password_confirmation]": {
                 equalTo: "#user_password"
                
            },
        },
        // // Specify the validation error messages
        messages: {
             "user[first_name]": {
                required: "Please enter a first name",
                pattern: "please enter only letters",
                maxlength: "Should not exceed limit 10"
                
            },
            "user[last_name]": {
                required: "Please enter a last name",
                pattern: "please enter only letters",
                maxlength: "Should not exceed limit 10"
                
            },
            "user[email]": {
                required: "Please enter a email",
                email: "Please enter valid email",
                remote: "Email already registered",

            },
            "user[password]": {
                required: "Please enter a password",
                minlength: "should be atleast 6 characters"
                
            },
            "user[password_confirmation]": {
                equalTo: "Password confirmation doesn't match"
                
            },
            
        },
       submitHandler: function(form) {
            form.submit();
        }
    });
    });

</script>