<section class="login-screen">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
          <div class="login-box">
            <div class="login-box-body">
              <div class="login-top">
                <p class="login-box-msg">FORGOT YOUR PASSWORD</p>
                <span class="">Link text</span>
                <p class="des-msg">Enter your registered email to retrieve your password.</p>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,id: "forgot_form" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group has-feedback user-icon">
    <%#= f.label :email %>
    <%= f.email_field :email, autofocus: true,placeholder: "Email Id",:class=>"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit",:class=>"btn btn-block submit-btn mrg-tb" %>
  </div></br>
<% end %>
</div>
              
            </div>
            <!-- /.login-box-body -->
          </div>
        </div>
      </div>
    </div>
  </section>
<%#= render "devise/shared/links" %>

<script type="text/javascript">
  $(document).ready(function(){
   $("#forgot_form").validate({
        // Specify the validation rules
        rules: {
            "user[email]": {
                 required: true,
                 email: true,
                 remote:"/users/find_email"

                
            },
            
        },
        // // Specify the validation error messages
        messages: {
             "user[email]": {
                required: "Please enter a email",
                email: "Please enter valid email",
                remote: "Email not found ",
                
            },
            
            
        },
       submitHandler: function(form) {
            form.submit();
        }
    });
    });

</script>




