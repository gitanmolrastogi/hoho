
<%= render :partial => 'layouts/slider_top'%>
 <p class="login-box-msg">FORGOT YOUR PASSWORD</p>
 <p class="des-msg">Enter your registered email id to retrieve your password.</p>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,id: "forgot_form" }) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group has-feedback user-icon">
    <%= f.email_field :email, autofocus: true,placeholder: "Email Id",:class=>"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit",:class=>"btn btn-block submit-btn mrg-tb" %>
  </div></br>
<% end %>
<%= render :partial => 'layouts/slider_bottom'%>
         
<%#= render "devise/shared/links" %>

<script type="text/javascript">
  $(document).ready(function(){
   $("#forgot_form").validate({
        // Specify the validation rules
        rules: {
            "user[email]": {
                 required: true,
                 email: true,
                 remote:"/users/find_email"

                
            },
            
        },
        // // Specify the validation error messages
        messages: {
             "user[email]": {
                required: "Please enter a email id",
                email: "Please enter valid email id",
                remote: "Email not found ",
                
            },
            
            
        },
       submitHandler: function(form) {
            form.submit();
        }
    });
    });

</script>




