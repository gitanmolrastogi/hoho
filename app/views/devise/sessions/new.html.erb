<section class="login-screen">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
          <div class="login-box">
            <div class="login-box-body">
              <div class="login-top">
                <p class="login-box-msg">LOGIN</p>
                <p class="des-msg">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name),:class=>"login-form-a") do |f| %>
<%#= resource.validate %>
<%#= devise_error_messages! %>
  <div class="form-group has-feedback user-icon">
    <%= f.email_field :email, autofocus: true,:class=>"form-control",placeholder: "LoginId" %>
  </div>

  <div class="form-group has-feedback lock-icon">
    <%= f.password_field :password, autocomplete: "off",:class=>"form-control",placeholder: "Password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
                    <div class="row">
                    <div class="col-sm-6 col-xs-6">
                      <div class="login-check">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                      </div>
                    </div>
                      <% end -%>

                    <!-- /.col -->
                    <div class="col-sm-6 col-xs-6">
                      <div class="forget-pwd pull-right">
                        <a href="/users/password/new" data-toggle="modal" data-target="#myModal">Forgot Password ?</a>
                      </div>
                    </div>
                    <!-- /.col -->
                  </div>
                  <%= f.submit "Sign in" ,:class=>"btn btn-block submit-btn mrg-tb",:id=>"signin"%>
                </div>
            <% end %>

              <div class="already-usr-a text-center">
                <h2 class="white-a">Donâ€™t have an account?</h2>
                <a href="/users/sign_up" class="btn btn-block signup-btn">Sign Up</a>
            </div>
            </div>
            <!-- /.login-box-body -->
          </div>
        </div>
      </div>
    </div>
  </section>

<%#= render "devise/shared/links" %>



